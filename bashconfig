export PATH=/usr/local/lib/nodejs/node-$VERSION-/bin:$PATH
## define GITUSER
havecmd git && export GITUSER="$(git config --global user.name)"
## export PATH
## be sure NOT to add ./ cuz it's unsafe
export PATH=\
