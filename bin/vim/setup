#!/bin/sh

if [ -z "$(which vim)" -o -z "$(which vimtutor)" ]; then
  echo Need to install full vim.
  exit 1
fi

read -p " pick:
1 = default
2 = ish: ios bash shell

" -n1 input
case $input in
	1) ln -sf "$PWD/vimrc" "$HOME/.vimrc" ;;
	2) ln -sf "$PWD/vimrc-simple" "$HOME/.vimrc" ;;
	*) echo enter 1 or 2 please
esac
