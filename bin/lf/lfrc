## Image Preview requirements:
## 1. Make sure to install all the dependecies such as ueberzug
## 2. Make sure to have the scope, cleaner file in ~/.config/lf
## 3. lf should be started through a wrapper script "lf-image" which is
## aliased to lf
## TODO find a way to avoid alias

## Basic vars
set shellopts '-eu'
set ifs "\n"
set scrolloff 10 # leave some space tob&bottom screen 
set icons
set period 1
set hiddenfiles ".*:*.aux:*.log:*.bbl:*.bcf:*.blg:*.run.xml"
set cleaner '~/.config/lf/cleaner'
set previewer '~/.config/lf/scope'

## cmds/functions
cmd open ${{
	case $(file --mime-type "$(readlink -f $f)" -b) in
		application/vnd.openxmlformats-officedocument.spreadsheetml.sheet) localc $fx ;;
		image/vnd.djvu|application/pdf|application/octet-stream|application/postscript) mupdf -I ;;
		text/*|application/json|inode/x-empty) $EDITOR $fx;;
		image/x-xcf) setsid -f gimp $f >/dev/null 2>&1 ;;
		image/svg+xml) display -- $f ;;
		image/*) rotdir $f | grep -i "\.\(png\|jpg\|jpeg\|gif\|webp\|tif\|ico\)\(_large\)*$" |
			setsid -f sxiv -aio 2>/dev/null | while read -r file; do
				[ -z "$file" ] && continue
				lf -remote "send select \"$file\""
				lf -remote "send toggle"
			done &
			;;
		audio/*) mpv --audio-display=no $f ;;
		video/*) setsid -f mpv $f -quiet >/dev/null 2>&1 ;;
		application/pdf|application/vnd*|application/epub*) mupdf -I $fx >/dev/null 2>&1 ;;
		application/pgp-encrypted) $EDITOR $fx ;;
		*) for f in $fx; do setsid -f $OPENER $f >/dev/null 2>&1; done;;
	esac
}}

cmd mkdir $mkdir -p "$(echo $* | tr ' ' '\ ')"

cmd extract ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	printf "%s\n\t" "$fx"
	printf "extract?[y/N]"
	read ans
	[ $ans = "y" ] && extract $fx
}}

cmd delete ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	printf "%s\n\t" "$fx"
	printf "delete?[y/N]"
	read ans
	[ $ans = "y" ] && rm -rf -- $fx
}}

## If you switch to a directory in lf and quit it the terminal will be
## switchting to this directory
cmd cd ${{
	tmp="$(mktemp)"
	lf -last-dir-path="$tmp" "$@"
	if [ -f "$tmp" ]; then
			dir="$(cat "$tmp")"
			rm -f "$tmp" >/dev/null
			[ -d "$dir" ] && [ "$dir" != "$(pwd)" ] && cd "$dir"
	fi
}}


cmd setbg "$1"
cmd bulkrename $vidir

## Bindings
map <c-f> $lf -remote "send $id select '$(fzf)'"
map J $lf -remote "send $id cd $(sed -e 's/\s*#.*//' -e '/^$/d' -e 's/^\S*\s*//' ${XDG_CONFIG_HOME:-$HOME/.config}/shell/bm-dirs | fzf)"
map gh
map g top
map D delete
map E extract
map Q cd
map <c-n> push :mkdir<space>
map <c-r> reload
map <c-s> set hidden!
map <enter> shell
map x $$f
map X !$f
map o &mimeopen $f
map O $mimeopen --ask $f

map A rename # at the very end
map c push A<c-u> # new rename
map I push A<c-a> # at the very beginning
map i push A<a-b><a-b><a-f> # before extention
map a push A<a-b> # after extention
map B bulkrename
map b $setbg $f

map <c-e> down
map <c-y> up
map V push :!vi<space>

map W $setsid -f $TERMINAL >/dev/null 2>&1

map Y $printf "%s" "$fx" | xclip -selection clipboard

