#!/bin/bash

if [ -z "$(which lf)" ]; then
  echo Need to install lf.
  exit 1
fi

[[ -d "$HOME/.config/lf" ]] || mkdir "$HOME/.config/lf"

## TODO test if symlinks are enough or cp is needed
ln -sf "$PWD/scope" "$HOME/.config/lf/scope"
ln -sf "$PWD/lfrc" "$HOME/.config/lf/lfrc"
ln -sf "$PWD/cleaner" "$HOME/.config/lf/cleaner"
cp "$PWD/lf-image" "$HOME/.local/bin/lf-image"
cp "$PWD/rotdir" "$HOME/.local/bin/rotdir"
