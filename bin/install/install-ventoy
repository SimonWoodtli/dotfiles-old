#!/bin/sh

## create variable for your system
spruce_type=linux

## get correct link with jq
URL=$(curl -s https://api.github.com/repos/ventoy/Ventoy/releases/latest | jq -r ".assets[] | select(.name | test(\"${spruce_type}\")) | .browser_download_url")
NAME=${URL##*/}
echo $NAME
N=${NAME%.*}
N2=${N%.*}
echo $N2
exit

## download tarball
curl -LJ -o /tmp/$NAME $URL

## extract tarball
tar -xvzf /tmp/$NAME
cd /tmp/$N2 || echo 'cd into /tmp/ventoydir'

echo 'run `sudo sh Ventoy2Disk.sh { -i | -I | -u } /dev/XXX` to install Ventoy on your USB device'
