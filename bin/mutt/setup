#!/bin/sh

## SETUP
## 1.
pass init xnasero@posteo.net
## 2.
## use key pw from your pw-manager with same mail as pass
gpg --full-gen-key
## 3.
## add your emails with `mw -a ...`

## 4.
## setup notmuch to search mails with ctrl-f
notmuch new

## 5.
## setup cronjob to sync mail
mw -t 10
echo "your mail gets synced every 10mins"
crontab -l

## make mailto: links open in mutt
cp "$PWD/neomutt.desktop" "$HOME/.local/share/applications/neomutt.desktop"
xdg-settings set default-url-scheme-handler mailto neomutt.desktop
## check if set correctly
xdg-email "test@good.com"
