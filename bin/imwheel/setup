#!/usr/bin/bash
## setup speedy mouse scroll

## Adjust speed in imwheelrc
#None,      Up,   Button4, [1-9]
#None,      Down, Button5, [1-9]

if [ ! -f ~/.imwheelrc ]; then ln -sf $PWD/imwheelrc $HOME/.imwheelrc; fi
ls -l $HOME/.imwheelrc
[[ ! -d $HOME/.config/autostart ]] && mkdir $HOME/.config/autostart

read -p "Which Distro do you have? [1-3]
1. Arch
2. Debian 
3. Fedora
"
## autostart imwheel:
## To make backward/forward buttons work on mouse 'imwheel -b "4 5"' needed
case $REPLY in
  1) ln -sf $PWD/imwheel-fedora.desktop $HOME/.config/autostart/imwheel.desktop ;;
  2) ln -sf $PWD/imwheel-debian.desktop $HOME/.config/autostart/imwheel.desktop ;;
  3) ln -sf $PWD/imwheel-fedora.desktop $HOME/.config/autostart/imwheel.desktop ;;
  *) echo valid input is: 1-3
     exit 1 ;;
esac

