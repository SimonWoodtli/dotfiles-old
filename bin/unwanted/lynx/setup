#!/bin/bash

declare -r gold=$'\033[38;2;245;160;12m'
declare -r reset=$'\033[0m'

if [ -z "$(which lynx)" ]; then
  echo Need to install lynx.
  exit 1
fi

mkdir ~/.config/ 2>/dev/null
rm -rf ~/.config/lynx 2>/dev/null
ln -s "$PWD" "$HOME/.config/lynx"
ls -l ~/.config/lynx
cp "$PWD/lynx" "$DOTFILES/scripts/lynx"

echo $gold"Now lynx should be in your scripts PATH. If not manually cp it to a
folder which is in your PATH."
